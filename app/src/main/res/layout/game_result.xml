<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:background="#8e69ad">
    <TextView
        android:id="@+id/tvChildRes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="TEST"
        android:textColor="#FFF"/>

        <TextView
            android:id="@+id/tvGameTypeRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text=""
            android:textStyle="bold"
            android:layout_below="@id/tvChildRes"
            android:layout_toRightOf="@id/tvGameTypeRes1"
            android:layout_marginLeft="10dp"
            android:textColor="@color/common_google_signin_btn_text_dark"/>

        <TextView
            android:id="@+id/tvQuestionCountRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:text=""
            android:layout_toRightOf="@id/tvQuestionCountRes1"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_below="@id/tvGameTypeRes"
            android:textColor="@color/common_google_signin_btn_text_dark"/>

        <TextView
            android:id="@+id/tvScoreRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/tvScoreRes1"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/tvQuestionCountRes1"
            android:text=""
            android:textColor="@color/common_google_signin_btn_text_dark"/>


    <TextView
        android:id="@+id/tvGameTypeRes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="@string/typeRes"
        android:textStyle="bold"
        android:layout_below="@id/tvChildRes"
        android:textColor="@color/common_google_signin_btn_text_dark"/>

    <TextView
        android:id="@+id/tvQuestionCountRes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="Number of Questions: "
        android:textStyle="bold"
        android:layout_below="@id/tvGameTypeRes"
        android:textColor="@color/common_google_signin_btn_text_dark"/>

    <TextView
        android:id="@+id/tvScoreRes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@id/tvQuestionCountRes1"
        android:text="Score: "
        android:textColor="@color/common_google_signin_btn_text_dark"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>